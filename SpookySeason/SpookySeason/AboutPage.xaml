<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpookySeason.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="tom_and_aya.jpg"
                   SemanticProperties.Description="Tom and Aya holding a stinky dog"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="SpookySeason" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label 
            Text="This app was written by Tom Kedik using XAML and C# with .NET MAUI."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Portfolio" Clicked="LearnMore_Clicked" />
    </VerticalStackLayout>
</ContentPage>